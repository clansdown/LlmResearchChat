{
  "name": "llm-ui",
  "version": "1.0.0",
  "description": "Electron app for LLM interactions with OpenRouter",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "dist:linux": "electron-builder --linux",
    "dist:deb": "electron-builder --linux deb",
    "dist:rpm": "electron-builder --linux rpm",
    "dist:appimage": "electron-builder --linux AppImage",
    "dist:snap": "electron-builder --linux snap",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": ["electron", "llm", "openrouter", "ai"],
  "author": "Your Name",
  "license": "MIT",
  "homepage": "https://github.com/yourusername/llm-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/llm-ui.git"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.7.2",
    "electron-store": "^8.2.0",
    "electron-context-menu": "^3.6.1",
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.8",
    "marked": "^11.1.0"
  },
  "build": {
    "appId": "com.example.llmui",
    "productName": "LLM UI",
    "copyright": "Copyright Â© 2024 ${author}",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**/*.d.ts",
      "!node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asar": true,
    "compression": "maximum",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "armv7l", "arm64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        },
        {
          "target": "snap",
          "arch": ["x64"]
        }
      ],
      "category": "Development",
      "icon": "assets/icon.png",
      "desktop": {
        "Name": "LLM UI",
        "Comment": "Electron app for LLM interactions with OpenRouter",
        "Categories": "Development;Utility;",
        "StartupNotify": "true"
      },
      "maintainer": "Your Name <your.email@example.com>",
      "vendor": "Your Company",
      "synopsis": "LLM UI - AI Assistant Interface",
      "description": "A modern Electron application for interacting with Large Language Models through OpenRouter API."
    },
    "deb": {
      "depends": [
        "libnotify4",
        "libappindicator1",
        "libxtst6",
        "libnss3",
        "libxss1",
        "libgtk-3-0",
        "libatspi2.0-0"
      ],
      "packageCategory": "utils",
      "priority": "optional"
    },
    "rpm": {
      "depends": [
        "libnotify",
        "libappindicator",
        "libXScrnSaver",
        "libXtst",
        "nss",
        "gtk3",
        "at-spi2-core"
      ]
    },
    "snap": {
      "grade": "stable",
      "summary": "LLM UI - AI Assistant Interface"
    },
    "appImage": {
      "license": "LICENSE",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "yourusername",
        "repo": "llm-ui"
      }
    ]
  }
}